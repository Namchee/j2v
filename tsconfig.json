{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "lib": [
      "ES2022"
    ],
    "types": ["node"],

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "isolatedModules": true,

    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true
  },
  "include": ["./src/**.ts"],
}
